{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "allowJs": false,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "declaration": false,
        // "outFile": "./build/framer.js",
        "noEmitOnError": true,
        "types": [
            "mocha",
            "node"
        ]
    },
    // "include": [
    //     "src/**/*.ts",
    //     "mocha/**/*.ts"
    // ],
    "exclude": [
        "**/*.js",
        "node_modules",
        "chrome/tools",
        "build",
        "extras",
        "mocha/*.ts"
    ],
    "filesGlob": [
      "**/*.ts"
    ]
}
